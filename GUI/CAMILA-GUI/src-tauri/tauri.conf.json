{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "camila-gui",
  "version": "0.1.0",
  "identifier": "com.camila-gui.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "decorations": false,
        "title": "camila-gui",
        "width": 1000,
        "height": 1000,
        "minHeight": 400,
        "minWidth": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
